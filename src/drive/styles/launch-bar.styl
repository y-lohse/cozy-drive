    color: #297ef1

.ac-suggestion-img
  position: absolute
  background-size: contain!important
  width:2em
  height:2em
  left: 0.3em

.ac-suggestion-name
  text-overflow: ellipsis

.ac-suggestion-path
  font-size:0.7em
  text-overflow: ellipsis
  color: #141414
  opacity: 0.8

.algolia-autocomplete .aa-dropdown-menu .aa-suggestion.aa-cursor
  background-color: #f0f0f0
  color: black
  border-left-color: #297ef2


.algolia-autocomplete .aa-dropdown-menu .aa-suggestion em
  font-weight: bold
  font-style: normal
